<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<ul class="list-group">
  <li class="list-group-item">
    <strong><small>
    <div class="row">
      <div class="col-sm-1">#</div>
      <div class="col-sm-2">Title</div>
      <div class="col-sm-3">Body</div>
      <div class="col-sm-2">Published</div>
      <div class="col-sm-4">Actions</div>
    </div>
    </strong></small>
  </li>
  <% @categories.each do |category| %>
  <li class="list-group-item">
    <div class="row">
      <div class="col-sm-1">
        <%= category.id %>
      </div>
      <div class="col-sm-2">
        <%= category.title %>
      </div>
      <div class="col-sm-3">
        <%= category.body %>
      </div>
      <div class="col-sm-2">
        <i class="fa fa-<%= category.published ? 'check' : 'times' %>" aria-hidden="true"></i>
      </div>
      <div class="col-sm-4">
        <%= link_to 'Show', category %> |
        <%= link_to 'Edit', edit_category_path(category) %> |
        <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  </li>
  <% end %>
</ul>

<br>

<%= link_to 'New Category', new_category_path, class: 'btn btn-primary' %>
